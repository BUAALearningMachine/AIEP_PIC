<Window x:Class="AICourseCSharpL5.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AICourseCSharpL5"
        mc:Ignorable="d"
        Title="图像识别" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1.5*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="40*"/>
                <RowDefinition Height="320*"/>
            </Grid.RowDefinitions>
            <Border BorderBrush="Gray" BorderThickness="0.5" Grid.Row="1" Margin="20">
                <Image x:Name="image_recognition" />
            </Border>
            <Button x:Name="button_openfile" Content="打开图片" HorizontalAlignment="Left" Margin="20,10,0,0" VerticalAlignment="Top" Width="201" Height="25" Click="button_openfile_Click"/>
        </Grid>
        <Grid Grid.Column="1" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="101*"/>
                <RowDefinition Height="130*"/>
                <RowDefinition Height="130*"/>
            </Grid.RowDefinitions>
            <Grid Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="30*"/>
                    <ColumnDefinition Width="30*"/>
                    <ColumnDefinition Width="30*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="50*"/>
                    <RowDefinition Height="50*"/>
                </Grid.RowDefinitions>
                <Button x:Name="button_recognition_meal" Content="菜品识别" HorizontalAlignment="Left" Margin="8,18,0,0" VerticalAlignment="Top" Width="75"/>
                <Button x:Name="button_recognition_car" Content="车型识别" HorizontalAlignment="Left" Margin="10.2,18,0,0" VerticalAlignment="Top" Width="75" Grid.Column="1"/>
                <Button x:Name="button_recognition_brand" Content="商标识别" HorizontalAlignment="Left" Margin="10.4,18,0,0" VerticalAlignment="Top" Width="75" Grid.Column="2"/>
                <Button x:Name="button_recognition_animal" Content="动物识别" HorizontalAlignment="Left" Margin="10,9.6,0,0" VerticalAlignment="Top" Width="75" Grid.Row="1"/>
                <Button x:Name="button_recognition_plant" Content="植物识别" HorizontalAlignment="Left" Margin="10.2,9.6,0,0" VerticalAlignment="Top" Width="75" Grid.Row="1" Grid.Column="1"/>
            </Grid>
            <TextBox x:Name="textBox_item" Margin="20" Grid.Row="1" TextWrapping="Wrap" Text=""/>
            <TextBox x:Name="textBox_total" Margin="20" Grid.Row="2" TextWrapping="Wrap" Text=""/>
        </Grid>
        <CheckBox x:Name="checkBox_face" Content="检测人脸" HorizontalAlignment="Left" Margin="246,25,0,0" VerticalAlignment="Top" Height="16"/>

    </Grid>
</Window>
